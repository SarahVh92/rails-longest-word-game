<div class="container m-4">

  <h1>New Game</h1>

  <ul class="letters mt-3 mb-4 d-flex justify-content-between align-content-center">
    <% @letters.each do |letter| %>
        <li><%= letter %></li>
    <% end %>
  </ul>

  <p>What is the longest word you can find?</p>

  <form action="/score" method="post" data-turbo="false">
    <div class="input-group">
      <input type="text" name="word" class="form-control border border-secondary">
      <input type="submit" value="play" class="btn btn-outline-secondary">
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  </form>

</div>
